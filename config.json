{
	"name": "Flight Tracker for Scholars",

	"namespace": "Vanderbilt\\FlightTrackerExternalModule",

	"description": "This module tracks a group of faculty's career development by charting publications and grants over time. Only US data supported.",

	"authors": [
		{
			"name": "Scott J. Pearson",
			"email": "scott.j.pearson@vumc.org",
			"institution": "Vanderbilt University Medical Center"
		}
	],

	
	"permissions": [
			"hook_data_entry_form",
			"hook_every_page_before_render",
			"hook_every_page_top",
			"hook_save_record",
			"hook_survey_page"
	],

	"links": {
		"project": [
			{
				"name": "Flight Tracker",
				"icon": "report",
				"url": "index.php"
			}
		]
	},

	"crons": [
		{
			"cron_name": "flight_tracker_cron",
			"cron_description": "Flight Tracker Cron",
			"method": "cron",
			"cron_hour": "00",
			"cron_minute": "00"
		},
		{
			"cron_name": "flight_tracker_emails",
			"cron_description": "Flight Tracker Emails; runs every minute",
			"method": "emails",
			"cron_frequency": "60",
			"cron_max_run_time": "300"
		},
		{
			"cron_name": "flight_tracker_batch",
			"cron_description": "Flight Tracker Batch Cron; runs every minute",
			"method": "batch",
			"cron_frequency": "60",
			"cron_max_run_time": "3600"
		}
	],

   "no-auth-pages": [
       "brag",
	   "wrangler/certifyPub",
	   "reporting/getData",
	   "js/xtract.js",
	   "emailMgmt/makeSurveyLinks",
	   "copyProject"
   ],


	"framework-version": 6,

	"compatibility": {
		"php-version-min": "7.0.0",
		"php-version-max": "",
		"redcap-version-min": "10.6.4",
		"redcap-version-max": ""
	},

	"project-settings": [
	]
}
